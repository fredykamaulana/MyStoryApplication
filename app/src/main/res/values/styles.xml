<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="TopRoundedBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounded_bottomsheet_dialog</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="BottomSheetDialog.TopRounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/TopRoundedBottomSheetStyle</item>
    </style>
</resources>